{
  "manifest_version": 2,
  "name": "Twitch Chat Flow",
  "version": "1.0.0",
  "description": "Displays Twitch chat comments like Niconico-style danmaku flowing from right to left",
  
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "*://*.twitch.tv/*"
  ],
  
  "content_scripts": [{
    "matches": [
      "*://*.twitch.tv/*", 
      "*://twitch.tv/*",
      "https://*.twitch.tv/*",
      "https://twitch.tv/*"
    ],
    "css": ["css/app.css"],
    "js": ["js/test.js", "js/default.js", "js/app.js"],
    "run_at": "document_end",
    "all_frames": false
  }],
  
  "browser_action": {
    "default_title": "Twitch Chat Flow",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  
  "web_accessible_resources": [
    "css/*",
    "js/*"
  ]
}