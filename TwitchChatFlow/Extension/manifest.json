{
  "manifest_version": 2,
  "name": "Twitch Chat Flow",
  "version": "1.0.0",
  "description": "Displays Twitch chat comments like Niconico-style danmaku flowing from right to left",
  
  "icons": {
    "16": "Resources/images/icon-16.png",
    "48": "Resources/images/icon-48.png",
    "128": "Resources/images/icon-128.png"
  },
  
  "background": {
    "scripts": ["Resources/js/background.js"],
    "persistent": false
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "*://*.twitch.tv/*"
  ],
  
  "content_scripts": [{
    "matches": ["*://*.twitch.tv/*"],
    "css": ["app.css"],
    "js": ["default.js", "app.js"],
    "run_at": "document_end",
    "all_frames": false
  }],
  
  "browser_action": {
    "default_title": "Twitch Chat Flow",
    "default_icon": {
      "16": "Resources/images/icon-16.png",
      "48": "Resources/images/icon-48.png",
      "128": "Resources/images/icon-128.png"
    },
    "default_popup": "Resources/popup.html"
  },
  
  "web_accessible_resources": [
    "Resources/css/*",
    "Resources/js/*"
  ]
}